{
  "name": "@amagaki/amagaki",
  "bin": {
    "amagaki": "./src/index.js"
  },
  "version": "0.2.0",
  "license": "MIT",
  "homepage": "https://amagaki.dev",
  "repository": {
    "type": "git",
    "url": "git://github.com/blinkkcode/amagaki.git"
  },
  "engines": {
    "node": ">=13.14.0"
  },
  "scripts": {
    "build:example": "node ./dist/src/index.js build example",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc",
    "copy": "mkdir -p dist/src/static; cp src/static/* dist/src/static",
    "dev:start": "npm run copy; npm run compile",
    "start:example": "node ./dist/src/index.js serve example",
    "dev": "nodemon --watch src -e ts --exec npm run dev:start",
    "docs": "typedoc --out docs src/",
    "fix": "node ./node_modules/eslint/bin/eslint --fix src/**/*.ts",
    "prepare": "rm -rf dist/; npm run dev:start;",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "ava": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/*.test.ts"
    ]
  },
  "devDependencies": {
    "@types/async": "^3.2.5",
    "@types/cli-progress": "^3.9.1",
    "@types/cli-table": "^0.3.0",
    "@types/express": "^4.17.11",
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^4.0.0",
    "@types/marked": "^2.0.0",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^14.14.37",
    "@types/nunjucks": "^3.1.4",
    "@types/semver": "^7.3.4",
    "ava": "^3.15.0",
    "eslint": "^7.23.0",
    "eslint-plugin-sort-class-members": "^1.10.0",
    "gts": "^3.1.0",
    "nodemon": "^2.0.7",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "typedoc": "^0.20.34",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "async": "^3.2.0",
    "cli-progress": "^3.9.0",
    "cli-table": "^0.3.6",
    "commander": "^7.2.0",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "js-yaml": "^4.0.0",
    "marked": "^2.0.1",
    "mime-types": "^2.1.29",
    "minimatch": "^3.0.4",
    "nunjucks": "^3.2.3"
  }
}
