{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "esModuleInterop": true,
    "jsx": "react",
    "jsxFactory": "h",
    "jsxFragmentFactory": "Fragment",
    "lib": ["es2018"],
    "outDir": "dist",
    "skipLibCheck": true,
    "target": "ES2020",
    "types": [
      "node",
    ]
  },
  "exclude": [
    "node_modules",
  ],
  "include": [
    "./src/**/*.ts",
    "./src/**/*.tsx",
  ]
}
