<div class="routes">
    <table>
        <thead>
            <tr>
                <td>{{"Locale"|t}}</td>
                <td>{{"URL path"|t}}</td>
                <td>{{"Title"|t}}</td>
            </tr>
        </thead>
        {% for item in pod.router.routes()|await %}
            {% if item.type != "default" %}
                <tr>
                    <td>{{item.locale.id}}</td>
                    <td><a href="{{item.url.path}}">{{item.url.path}}</a></td>
                    <td>{{item.doc.fields.title}}</td>
                </tr>
            {% endif %}
        {% endfor %}
    </table>
</div>
