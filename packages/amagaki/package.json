{
  "name": "@amagaki/amagaki",
  "version": "2.1.6",
  "license": "MIT",
  "homepage": "https://amagaki.dev",
  "repository": {
    "type": "git",
    "url": "git://github.com/blinkk/amagaki.git",
    "directory": "packages/amagaki"
  },
  "engines": {
    "node": ">=14"
  },
  "bin": {
    "amagaki": "./dist/src/cli.js"
  },
  "main": "./dist/src/index.js",
  "files": [
    "dist",
    "!**/*.test.*"
  ],
  "scripts": {
    "build:example": "node ./dist/src/cli.js --profile build example",
    "check": "gts check",
    "clean": "gts clean",
    "compile": "tsc",
    "copy": "mkdir -p dist/src/static; cp src/static/* dist/src/static",
    "dev": "nodemon --watch src -e njk,ts --exec npm run dev:start",
    "dev:start": "npm run copy; npm run compile",
    "docs": "typedoc",
    "docs:ci": "typedoc --out public/api",
    "fix": "eslint --fix src/**/*.ts",
    "prepare": "rm -rf dist/; npm run dev:start;",
    "start:example": "node ./dist/src/cli.js serve example",
    "test": "ava",
    "test:watch": "ava --watch"
  },
  "ava": {
    "require": [
      "ts-node/register"
    ],
    "extensions": [
      "ts"
    ],
    "files": [
      "src/**/*.test.ts"
    ]
  },
  "devDependencies": {
    "@types/async": "^3.2.6",
    "@types/cli-progress": "^3.9.1",
    "@types/cli-table": "^0.3.0",
    "@types/compression": "^1.7.2",
    "@types/express": "^4.17.11",
    "@types/express-serve-static-core": "^4.17.21",
    "@types/glob": "^7.1.3",
    "@types/js-yaml": "^4.0.1",
    "@types/marked": "^2.0.2",
    "@types/mime-types": "^2.1.0",
    "@types/node": "^15.0.1",
    "@types/nunjucks": "^3.1.4",
    "@types/semver": "^7.3.5",
    "ava": "^4.0.1",
    "del": "^6.0.0",
    "eslint": "^7.25.0",
    "eslint-plugin-sort-class-members": "^1.11.0",
    "get-port": "^5.1.1",
    "gts": "^3.1.0",
    "nodemon": "^2.0.7",
    "ts-loader": "^9.1.1",
    "ts-node": "^10.5.0",
    "typedoc": "^0.22.12",
    "typescript": "^4.3.5"
  },
  "dependencies": {
    "@blinkk/editor.dev-ui": "^3.11.1",
    "async": "^3.2.0",
    "chalk": "^2.4.2",
    "chokidar": "^3.5.1",
    "cli-progress": "^3.9.0",
    "cli-table": "^0.3.6",
    "commander": "^7.2.0",
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "glob": "^7.1.6",
    "i": "^0.3.7",
    "isomorphic-git": "^1.12.1",
    "js-yaml": "^4.1.0",
    "marked": "^2.0.3",
    "mime-types": "^2.1.30",
    "minimatch": "^3.0.4",
    "nunjucks": "^3.2.3",
    "sucrase": "^3.18.1"
  }
}
