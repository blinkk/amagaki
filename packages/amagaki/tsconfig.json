{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "allowJs": true,
    "composite": true,
    "esModuleInterop": true,
    "rootDir": ".",
    "outDir": "dist",
    "lib": ["es2020"],
    "resolveJsonModule": true,
    "types": [
      "node",
    ]
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
  ],
  "typedocOptions": {
    "excludeProtected": true,
    "excludeExternals": true,
    "entryPoints": [
      "./src/",
    ],
    "exclude": [
      "./src/**/*.test.ts",
    ],
    "out": "docs",
  }
}
