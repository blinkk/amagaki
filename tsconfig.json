{
  "extends": "gts/tsconfig-google.json",
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "target": "ES2020",
    "paths": {
      "@amagaki/amagaki": ["packages/amagaki/"]
    },
    "types": ["node"]
  },
  "references": [
    {
      "path": "./packages/amagaki"
    }
  ],
  "include": ["./packages/*/**.ts"],
  "exclude": ["**/*.test.ts", "node_modules", "dist"]
}
