{
  "extends": "gts/tsconfig-google.json",
  "compilerOptions": {
    "composite": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "target": "ES2020",
    "baseUrl": ".",
    "module": "commonjs",
    "paths": {
      "@amagaki/amagaki": ["packages/amagaki"]
    },
    "types": ["node"]
  },
  "include": ["./packages/*/**.ts"],
  "exclude": ["**/*.test.ts", "node_modules", "dist"]
}
